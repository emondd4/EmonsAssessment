<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".Activities.ItemDetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:backgroundTint="#50ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/DetailsBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Main"
                android:textAllCaps="false"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/details_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ID"
                android:textSize="30sp"
                android:textColor="@color/purple_500" />

            <TextView
                android:id="@+id/details_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="url"
                android:textSize="30sp"
                android:textColor="@color/purple_500" />

            <TextView
                android:id="@+id/details_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="type"
                android:textSize="30sp"
                android:textColor="@color/purple_500" />

            <TextView
                android:id="@+id/details_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="language"
                android:textSize="30sp"
                android:textColor="@color/purple_500" />

            <TextView
                android:id="@+id/details_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="status"
                android:textSize="30sp"
                android:textColor="@color/purple_500" />

            <TextView
                android:id="@+id/details_premiered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="premiered"
                android:textSize="30sp"
                android:textColor="@color/purple_500" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>